<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/spy.period"
            android:id="@+id/textSpysPeriode"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spys_interval"
            android:layout_gravity="left|center_vertical"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textSpysPeriode"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/player_spys"
                android:id="@+id/curiousPlayerTitle"
                android:singleLine="false"
                android:textAlignment="center"
                android:textColor="#ff7808"
                android:gravity="center_vertical|center_horizontal"
                android:layout_above="@+id/curiousAlliances"
                android:layout_alignLeft="@+id/curiousPlayers"
                android:layout_alignStart="@+id/curiousPlayers" />

            <ListView
                android:layout_width="175dp"
                android:layout_height="300dp"
                android:id="@+id/curiousAlliances"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:layout_below="@+id/curiousAllianceTitle"
                android:layout_toRightOf="@+id/curiousPlayers"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/alliance_spys"
                android:id="@+id/curiousAllianceTitle"
                android:textAlignment="center"
                android:textColor="#ff7808"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/curiousAlliances"
                android:layout_alignStart="@+id/curiousAlliances"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="15dp" />

            <ListView
                android:layout_width="175dp"
                android:layout_height="300dp"
                android:id="@+id/curiousPlayers"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:layout_below="@+id/curiousPlayerTitle"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp" />


        </RelativeLayout>

    </RelativeLayout>


