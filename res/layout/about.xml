<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Forum OGSteam"
        android:id="@+id/labelForum"
        android:layout_gravity="left|center_vertical"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="lien"
        android:id="@+id/forumLink"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Déclaration de bugs"
        android:id="@+id/textView"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="lien"
        android:id="@+id/bugsLink"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Page Play Store"
        android:id="@+id/textView2"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="lien"
        android:id="@+id/playstoreLink"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Application développée bénévolement par"
        android:id="@+id/textView3"
        android:layout_gravity="left|center_vertical"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Jedinight"
        android:id="@+id/textView4"
        android:layout_gravity="right|center_vertical"
        android:textColor="#faff0f"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/avatar_jedinight"
        android:layout_marginTop="-40dp"
        android:layout_gravity="right"
        android:layout_marginRight="100dp" />

</LinearLayout>