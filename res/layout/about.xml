<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/about.forum.name"
            android:id="@+id/labelForum"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="lien"
            android:id="@+id/forumLink"
            android:layout_below="@+id/labelForum"
            android:layout_alignLeft="@+id/labelForum"
            android:layout_alignStart="@+id/labelForum"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/about.bugs"
            android:id="@+id/textView"
            android:layout_below="@+id/forumLink"
            android:layout_alignLeft="@+id/forumLink"
            android:layout_alignStart="@+id/forumLink"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="lien"
            android:id="@+id/bugsLink"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/about.google.playstore"
            android:id="@+id/textView2"
            android:layout_below="@+id/bugsLink"
            android:layout_alignLeft="@+id/bugsLink"
            android:layout_alignStart="@+id/bugsLink"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="lien"
            android:id="@+id/playstoreLink"
            android:layout_below="@+id/textView2"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/about.help"
            android:id="@+id/textView5"
            android:layout_below="@+id/playstoreLink"
            android:layout_alignLeft="@+id/playstoreLink"
            android:layout_alignStart="@+id/playstoreLink"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="lien"
            android:id="@+id/helpLink"
            android:layout_below="@+id/textView5"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/about.develop.by"
            android:id="@+id/textView3"
            android:layout_below="@+id/helpLink"
            android:layout_alignLeft="@+id/helpLink"
            android:layout_alignStart="@+id/helpLink"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Jedinight (Jean-Philippe TESSIER)"
            android:id="@+id/developerName"
            android:textColor="#faff0f"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginTop="15dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/avatar_jedinight"
            android:layout_below="@+id/developerName"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp" />

    </RelativeLayout>
</ScrollView>