<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">

    <GridLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" android:layout_marginLeft="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/alliance"
                android:layout_gravity="left"
                android:layout_row="0"
                android:layout_column="0"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/nb_members"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/spy_title_me"
                android:id="@+id/textView"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"
                android:layout_columnSpan="2"
                android:textColor="#fdff0d"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/alliance_spys"
                android:id="@+id/curiousPlayerTitlecuriousAllianceTitle"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="25dp"
                android:textAlignment="center"
                android:textColor="#ff7808"
                android:layout_gravity="center_horizontal"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/player_spys"
                android:id="@+id/curiousPlayerTitle"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_marginTop="25dp"
                android:singleLine="false"
                android:textAlignment="center"
                android:textColor="#ff7808"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"/>

        <ListView
                android:layout_width="175dp"
                android:layout_height="300dp"
                android:id="@+id/curiousPlayers"
                android:layout_row="3"
                android:layout_column="0"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"/>

        <ListView
                android:layout_width="175dp"
                android:layout_height="300dp"
                android:id="@+id/curiousAlliances"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_marginLeft="5dp"
                android:layout_gravity="right"
                android:paddingRight="10dp"
                android:paddingTop="5dp"/>

    </GridLayout>
</ScrollView>